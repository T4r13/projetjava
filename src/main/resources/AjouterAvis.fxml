<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="540.0" style="-fx-background-color: #f9fbfd;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.easytrip.controllers.AjouterAvisController">

   <VBox alignment="TOP_CENTER" layoutX="30" layoutY="20" prefWidth="480" spacing="20" AnchorPane.leftAnchor="30" AnchorPane.topAnchor="20">

      <!-- Titre -->
      <Label style="-fx-font-size: 24px; -fx-text-fill: #2196F3; -fx-font-weight: bold;" text="Ajouter un Avis" />

      <!-- Réservation ComboBox -->
      <HBox alignment="CENTER_LEFT" spacing="12">
         <Label minWidth="120" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" text="Réservation :" />
         <ComboBox fx:id="reservationCombo" promptText="ID réservation" style="-fx-background-color: white; -fx-border-color: #d0d7de; -fx-border-radius: 6;                           -fx-background-radius: 6; -fx-padding: 4 6; -fx-font-size: 13px;" />
      </HBox>

      <!-- Date d'avis (auto) -->
      <HBox alignment="CENTER_LEFT" spacing="12">
         <Label minWidth="120" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" text="Date d'avis :" />
         <TextField fx:id="dateField" editable="false" promptText="2025-04-30" style="-fx-background-color: white; -fx-border-color: #d0d7de; -fx-border-radius: 6;                            -fx-background-radius: 6; -fx-padding: 6 8; -fx-font-size: 13px;" />
      </HBox>

      <!-- Note Slider avec étoiles dynamiques -->
      <HBox alignment="CENTER_LEFT" spacing="12">
         <Label minWidth="120" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" text="Note :" />
         <VBox spacing="6">
            <Slider fx:id="noteSlider" blockIncrement="1" majorTickUnit="1" max="5" min="1" minorTickCount="0" showTickLabels="false" showTickMarks="true" snapToTicks="true" style="-fx-pref-width: 250px;" value="3" />
         </VBox>
         <Label fx:id="etoilesLabel" style="-fx-font-size: 16px; -fx-text-fill: #ffb400;" text="⭐⭐⭐" />
      </HBox>

      <!-- Description -->
      <HBox alignment="TOP_LEFT" spacing="12">
         <Label alignment="TOP_LEFT" minWidth="120" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" text="Description :" />
         <TextArea fx:id="descriptionArea" prefRowCount="5" promptText="Écrivez votre avis ici..." style="-fx-background-color: white; -fx-border-color: #d0d7de; -fx-border-radius: 6;                           -fx-background-radius: 6; -fx-padding: 6 8; -fx-font-size: 13px;" wrapText="true" />
      </HBox>

      <!-- Boutons -->
      <HBox alignment="CENTER" spacing="20">
         <Button style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;                         -fx-background-radius: 20; -fx-padding: 8 16;" text="Ajouter" />
         <Button style="-fx-background-color: #90a4ae; -fx-text-fill: white; -fx-font-size: 14px;                         -fx-background-radius: 20; -fx-padding: 8 16;" text="Annuler" />
      </HBox>

   </VBox>
</AnchorPane>
